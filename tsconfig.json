{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "@type/*": ["src/@types/*"],
      "@entity/*": ["src/domain/entities/*"],
      "@repository/*": ["src/domain/repositories/*"],
      "@useCase/*": ["src/domain/use-cases/*"],
      "@error/*": ["src/domain/types/errors/*"],
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
